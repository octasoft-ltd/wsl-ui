{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WSL UI",
  "identifier": "wsl-ui",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "WSL UI",
        "width": 1024,
        "height": 800,
        "minWidth": 800,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi"
    ],
    "resources": [
      "resources/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "nsis": {
        "installMode": "currentUser",
        "sidebarImage": "icons/sidebar.bmp",
        "headerImage": "icons/header.bmp",
        "installerIcon": "icons/icon.ico"
      },
      "wix": {
        "bannerPath": "icons/wix-banner.bmp",
        "dialogImagePath": "icons/wix-dialog.bmp"
      }
    }
  }
}

